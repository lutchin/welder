{% extends 'WeldingWeldBundle::layout.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
    <div class="row featurette">

    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l, F j, Y') }}</time></div>
            <h2>{{ blog.title }}</h2>
        </header>
        <div class="col-md-5">
        <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="img-thumbnail featurette-image img-responsive center-block" />
        </div>
        <div class="col-md-7">
            <p>{{ blog.blog }}</p>
        </div>
    </article>
    </div>
{% endblock %}